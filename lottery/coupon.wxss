.page__coupons {
  margin-top: 15px;
}
.item__coupon {
  text-align: center;
  box-sizing: border-box;
  width: 100%;
  padding: 0px 3% 0px 3%; 
}
.bg__coupon {
  width: 100%;
  height: 95px;
}
.inner__coupon {
  position: absolute;
  top: 0px;
  width: 100%; 
  height: 75px;
  font-size: 0px;
  border-bottom: 1px dashed #e5e5e5 ;
}
.item_inner {
  font-size: 14px;
  display: inline-block;
  vertical-align: middle;
  width: 50%;
  box-sizing:border-box;
}
.wraper__item {
  width: 100%;
  position: relative;
}
.left__coupon {
  text-align: left;
  padding-left: 15px;
}
.right__coupon {
  text-align: right;
  padding-right: 15px;
}
.item__inner_up {
  height: 50px;
}
.left__up {
  padding-top: 20px;
  box-sizing: border-box;
}
.smallest__font {
  font-size: 12px;
}
.small__font {
  font-size: 14px;
  font-weight: 500px;
}
.red_color {
  color:red;
}
.gray__color {
  color: gray
}
.normal__font {
  font-size: 16px;
  font-weight: 500;
}
.big__font {
  font-size: 36px;
  font-weight: bold;
}
.margin__left2{
  margin-left: 2px; 
}

.tool__bar {
  display: flex;
  align-items: center;
  flex-direction: column;
  margin-top: 15px;
}