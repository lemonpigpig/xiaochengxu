<view>
  <view class='site_detail'>
    <view class='site_title'>
      网点详情
    </view>
    <view class='site_code'>
      <text class='key'>商家编码：</text>
      <text>{{code}}</text>
    </view>
    <view class='site_naem'>
      <text class='key'>商家名称：</text>
      <text>{{name}}</text>
    </view>
    <view class='site_addr'>
      <text class='key'>商家地址：</text>
      <text>{{addr}}</text>
    </view>
    <view class='site_wealfare'>
      <text class='key'>公益商品：</text>
      <text>{{commonwealGoods}}</text>
    </view>
    <view>
      <text wx:if="{{canPick}}">可购彩 可领券 </text>
      <text wx:if="{{canUse}}">可用券 </text>
    </view>
  </view>
  <view class='toolbar_merchant' bindtap='consumer'>
    <view class='toolbar_merchant_item'>
      用券
    </view>
  </view>
</view>