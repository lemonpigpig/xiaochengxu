<view class='page__site'>
  <scroll-view 
    scroll-y="true" 
    bindscrolltolower="searchScrollLower"
    style='height:100vh'>
    <view class='site_list'>
      <view wx:for="{{list}}" 
      wx:key="{{item.id}}" 
      class='site_item'>
        <view class='pic'>
          <image src="{{item.pic}}" style='width:45px;height:45px;'></image>
        </view>
        <view class='details'>
          <view class='name'>{{item.merchantName}}</view>

          <view class='address'>
            {{item.merchantAddress}}
            <text class='distance'>{{item.distanceC}}</text>
          </view>
          <view class='tag'>
            <view class='picke' wx:if="{{item.canPick}}">可领</view>
            <view class='use' wx:if="{{item.canUse}}">可用</view>
          </view>
        </view>
      </view>
    </view>
    
    <view wx:if="{{isLoading}}" class='loading'>
      <image src="/static/loading.gif" style='width: 28px;height: 28px;'></image>
      <view class='white_space'></view>
    </view>
  </scroll-view>
</view>