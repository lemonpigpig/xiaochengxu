<import src="../../template/itemlist.wxml"/>
<view class='wraper'>
  <!-- loading -->
  <loading wx:if="{{hidden}}">
      加载中...
  </loading>
  <!-- <view>用户信息：{{userInfo.nickName}}</view> -->
  <view>
    <view class="tool__bar" bindtap="scan">
      <view>
        <image src="/static/sao.png" style="width:22px;height:22px;"></image>
      </view>
      <view>用券</view>
    </view>
  </view>
  <view class='no__result' wx:if="{{couponList.length===0}}">
    <image src='/static/no_result1.png' style='width: 121px; height: 74px;'></image>
    <text>
      您暂时还没有可用的优惠券，请先领取
    </text>
  </view>
   <view wx:else>
    <view wx:for="{{couponList}}" wx:key="{{item.id}}">
      <template is="item" data="{{...item}}"/> 
    </view> 
  </view> 
</view>
